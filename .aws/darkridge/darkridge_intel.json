{
    "variables": {
        "srchost": "balls.darkridge.com",
        "aws_access_key_id": "{{ env `AWS_ACCESS_KEY_ID` }}",
        "aws_secret_access_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",
        "region": "us-west-2",
        "buildtime": "{{isotime \"2006-0102-1504\"}}"
        "general_cpuarch": "amd64",
        "aws_cpuarch": "x86_64",
        "instance_type": "c5n.large"
    },
    "builders": [{
        "type": "amazon-ebssurrogate",
        "access_key": "{{ user `aws_access_key_id` }}",
        "secret_key": "{{ user `aws_secret_access_key` }}",
        "region": "{{user `region`}}",

        "ssh_pty": true,
        "instance_type": "c6gn.large",
        "associate_public_ip_address": true,
        "ssh_username": "ubuntu",
        "ssh_timeout": "5m",
        "ssh_interface": "public_ip",

        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "*ubuntu-focal-20.04-{{ user `general_cpuarch`}}-server*",
                "root-device-type": "ebs"
            },
            "owners": ["099720109477"],
            "most_recent": true
        },

        "launch_block_device_mappings": [
            {
                "device_name": "/dev/xvdf",
                "delete_on_termination": true,
                "volume_size": 5,
                "volume_type": "gp2"
            }
        ],

        "run_tags": {
            "Name": "Packer: Ubuntu + ZFS"
        },
        "run_volume_tags": {
            "Name": "Packer: Ubuntu + ZFS"
        },

        "ami_name": "{{ user `aws_cpuarch` }}-darkridge-ubuntu-focal-zfs-{{ user `buildtime` }}",
        "ami_description": "Ubuntu 20.04 + ZFS (darkridge)",
        "ami_virtualization_type": "hvm",
        "ami_architecture": "{{ user `aws_cpuarch` }}",
        "ami_root_device": {
            "source_device_name": "/dev/xvdf",
            "device_name": "/dev/xvda",
            "delete_on_termination": true,
            "volume_size": 5,
            "volume_type": "gp2"
        },
        "ena_support": true,
        "encrypt_boot": true,
        "tags": {
            "Name": "Ubuntu 20.04 + ZFS",
            "BuildTime": "{{ user `buildtime` }}"
        }
    }],
    "provisioners": [
        {
            "type": "file",
            "source": "bootstrap.sh",
            "destination": "/tmp/bootstrap.sh"
        },
        {
            "type": "file",
            "source": "setup.sh",
            "destination": "/tmp/setup.sh"
        },
        {
            "type": "file",
            "source": "migrate.sh",
            "destination": "/tmp/migrate.sh"
        },
        {
            "type": "shell",
            "environment_vars": [
                "AWS_ACCESS_KEY_ID={{ user `aws_access_key_id` }}",
                "AWS_SECRET_ACCESS_KEY={{ user `aws_secret_access_key` }}",
                "AWS_DEFAULT_REGION={{ user `region` }}",
                "SRCHOST={{ user `srchost` }}",
                "CPUARCH={{ user `general_cpuarch` }}"
               ],
            "start_retry_timeout": "5m",
            "script": "surrogate.sh",
            "execute_command": "sudo -S --preserve-env=SSH_AUTH_SOCK sh -c '{{ .Vars }} {{ .Path }}'",
            "skip_clean": true
        }
    ]
}
